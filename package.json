{
  "name": "xity-starter",
  "version": "0.1.0",
  "description": "A blog-ready 11ty starter based on PostCSS, width RSS feed clean structure.",
  "author": "Mattia Astorino",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/equinusocio/xity-starter"
  },
  "scripts": {
    "clean": "run-s clean:*",
    "clean:cache": "rimraf ./.cache",
    "clean:site": "rimraf ./dist",
    "build": "cross-env ELEVENTY_ENV=production run-s clean:* build:*",
    "build:html": "eleventy",
    "build:assets": "parcel build ./assets/css/app.css ./assets/js/app.js --out-dir ./dist/assets --no-source-maps",
    "watch": "cross-env ELEVENTY_ENV=development run-s clean:* && run-p watch:*",
    "watch:html": "eleventy --serve --port=8080",
    "watch:assets": "parcel watch ./assets/css/app.css ./assets/js/app.js --out-dir ./dist/assets --no-source-maps --no-hmr",
    "start": "yarn watch"
  },
  "dependencies": {
    "stimulus": "^1.1.1",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "cross-env": "^6.0.3",
    "html-minifier": "^4.0.0",
    "luxon": "^1.21.3",
    "markdown-it": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^6.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Safari versions",
    "last 1 Edge versions"
  ]
}
